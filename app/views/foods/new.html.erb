<section class="new-food">
  <h2 class="title text-center">Add New Food</h2>
 <%= form_with model: Food, url: user_foods_path(current_user), data: { turbo: false }  do |form| %>
     <div class="d-flex flex-column align-items-center">
 <div class= "d-flex flex-column align-items-center w-75 mb-3">
      <%= form.text_field :name, autofocus: true, autocomplete: "name", class: "form-control mb-3", Placeholder: "Name", value: ""%>

      <%= form.text_field :measurement_unit, autofocus: true, autocomplete: "measurement_unit", class: "form-control mb-3", Placeholder: "Measurement unit" %>

      <%= form.number_field :price, step: 0.5,  class: "w-full form-control",Placeholder: "Price" %>
    <%= form.submit "Add new food", class:'btn btn-primary my-3' %>
    </div>
    </div>
  <% end %>
</section>
